<h2>User Photo</h2>

<% form_tag("upload", :multipart => true) do %>
<fieldset>
  <legend><%= @title %></legend> 
  
  <%= error_messages_for 'avatar' %>

  <% if @user.avatar.exists? %>
  <div class="form_row">
    <label for="current_avatar">Photo:</label>
    <%= avatar_tag(@user) %>
    [<%= link_to "delete", { :action => "delete" }, 
                           :confirm => "Are you sure?" %>]
  </div>
  <% end %>
  <div class="form_row">
    <label for="new_avatar">New Photo:</label>
    <%= file_field "avatar", "image" %>
  </div>

  <%= submit_tag "Upload Photo", :class => "submit" %> 
</fieldset>
<% end %>