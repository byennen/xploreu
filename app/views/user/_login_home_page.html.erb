<h1>Login or Join</h1>
<% form_for :user do |form| %>  
  <%= render :partial => "user/screen_name_field_home_page", 
             :locals  => { :form => form } %> 
  <%= render :partial => "user/password_field_home_page",
             :locals  => { :form => form, :field => "password" } %>
  
  <div style="float:left;">
    <label for="remember_me">Remember Me?:</label>
    <%= form.check_box :remember_me %>
  </div>
  
  <div>  
    <%= submit_tag "Login!", :class => "submit_homepage" %>
  </div>
<% end %>

<br/>
<p>  
  Forgot? <%= link_to "Remind Me!", :controller => "email", :action => "remind" %>
</p>

<p >  
  Not a member?  <%= link_to "Register now!", :controller => "user", :action => "register" %> For FREE!
</p>