<!DOCTYPE HTML PUBLIC "-//W3C//DTD XHTML 1.0 Strict//EN" 
  "http://www.w3.org/TR/xhtml1/DTD/xhtml1-strict.dtd"> 
<html> 
	<head> 
    <title><%= @title %>: XploreU The Student Travel-pedia</title>
		<%= stylesheet_link_tag 'frontend', 'profile', 'corners', 'stickies', 'tabs', 'slideshow', 'niftyCorners' %>
		<%= javascript_include_tag :defaults, 'tabbedpane', 'slideshow', 'niftycube' %>
		<script type="text/javascript">
		window.onload=function(){
		Nifty("ul#nav a","small transparent top");
		}
		</script>
	</head>
	<body>
		<div id="pagewidth" >
      		<%= render :partial => 'shared/header' %>
        	<%= render :partial => 'shared/top_nav' %>
		<div id="wrapper" class="clearfix" >
	    <div class="outside_home">
      		<div id="TopRightCorner_home"></div>		
			<div id="TopLeftCorner_home"></div>
				<div id="top_bar">
					<div style="float:left;"><b><%= @title %></b></div>
					<div id="nav">
						<% if logged_in? -%>
						<%= nav_link "Profile", "user", "index" %> |
						<%= nav_link "Logout", "user", "logout" %> 
						<% else -%>
						<% end -%>
					</div>
				</div>
		    <div id="inner_home">
			<!-- <div class="notice"><%= render_stickies %></div> -->
				<!-- inner content here -->
				<%= render :partial => 'shared/login_box' %>
				<div id="rotator">
					<img src="images/frontend/slides/xploreu_homepage.jpg" alt="XploreU Student Travel" />
					<img src="images/frontend/slides/elephant.jpg" alt="XploreU Student Travel" />
					<img src="images/frontend/slides/mountains.jpg" alt="XploreU Student Travel" />
					<img src="images/frontend/slides/ocean.jpg" alt="XploreU Student Travel" />
					<img src="images/frontend/slides/palm_mountain.jpg" alt="XploreU Student Travel" />
					<img src="images/frontend/slides/sunset_mountains.jpg" alt="XploreU Student Travel" />
					<img src="images/frontend/slides/sunset_trees.jpg" alt="XploreU Student Travel" />
					<img src="images/frontend/slides/bus_ride.jpg" alt="XploreU Student Travel" />
				</div>
				<div class="map">
					<div id="fact">
						<h3>Random Travel Fact</h3>
						<script type="text/javascript">
						var imgsa = new Array("The average number of people airborne over the US any given hour: 61,000","In North Dakota beer & pretzels can't be served at the same time in any bar or restaurant.","In Scotland it is illegal to be a drunk in possession of a cow.","In Alaska it is illegal to push a live moose out of a moving airplane.","In Connecticut you are not allowed to walk across a street on your hands.","In Florida it is illegal to sing in a public place while attired in a swimsuit.","In Florida any form of sexual contact other than missionary position is a misdomeanor.","In Iowa kisses may last for as much as, but no more than, five minutes.","In New York a fine of $25 can be levied for flirting.");
						var alta = new Array();
						var currentAda = 0;
						var imgCta = 10;
						function cyclea() {
						  if (currentAda == imgCta) {
						    currentAda = 0;
						  }
						document.getElementById('adLinka').innerHTML = imgsa[currentAda];
						  currentAda++;
						}
						  window.setInterval("cyclea()",10000);
						</script>
						<div class="fact_text" id="adLinka">The average number of people airborne over the US any given hour: 61,000</div>
					</div>
				    <div class="tabbed-pane">
					<ul class="tabs">
					  	<li><a href="#" class="active" id="about_us">About Us</a></li>
					  	<li><a href="#" id="ambassadors">Ambassadors</a></li>
						<li><a href="#" id="tips">Tips</a></li>
						<li><a href="#" id="post">Post</a></li>
						<li><a href="#" id="blog">Blog</a></li>
						<li><a href="#" id="updates">Updates</a></li>
					</ul>
					<div id="MyPane_container" class="tabbed-container">
					  <div id="MyPane_overlay" class="overlay" style="display: none">
					  </div>
					  <div id="MyPane" class="pane"></div>
					</div>
				    </div>
				    <script type="text/javascript">
				      new TabbedPane ('MyPane',
					{
					  'about_us': '<%= url_for(:controller => :site, :action => :about_us) %>',
					  'ambassadors': '<%= url_for(:controller => :site, :action => :ambassadors) %>',
					  'tips': '<%= url_for(:controller => :site, :action => :tips) %>',
					  'post': '<%= url_for(:controller => :site, :action => :post) %>',
					  'blog': '<%= url_for(:controller => :site, :action => :blog) %>',
					  'updates': '<%= url_for(:controller => :site, :action => :updates) %>'
					},
					{
					  onClick: function(){
					    $("MyPane_overlay").show();
					  },
					  onSuccess: function(){
					    $("MyPane_overlay").hide();
					  }
					});
				    </script>
				</div>
				<%= render :partial => 'shared/share_with_friends' %>
				<div id="BottomRightCorner"></div>		
				<div id="BottomLeftCorner"></div>
			</div>
		</div>
		</div>
		<!-- end of inner content -->
      	<%= render :partial => 'shared/footer' %>
		</div>
		<%= render :partial => 'shared/debug' %>
	    </div>		
		<noscript>
		    <div id="att">
		    	<p>Sorry, you need to activate JavaScript in your browser.</p>
		    </div>
    	</noscript>
	</body>
</html>
