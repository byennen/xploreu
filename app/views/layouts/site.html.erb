<!DOCTYPE HTML PUBLIC "-//W3C//DTD XHTML 1.0 Strict//EN" 
  "http://www.w3.org/TR/xhtml1/DTD/xhtml1-strict.dtd"> 
<html> 
	<head> 
    <title><%= @title %>: XploreU The Student Travel-pedia</title>
		<%= stylesheet_link_tag 'frontend', 'profile', 'site', 'corners' %>
	  <%= javascript_include_tag :defaults %>
	
	</head>
	<body>
		<div id="pagewidth" >
      <%= render :partial => 'shared/header' %>
        <%= render :partial => 'shared/top_nav' %>
				  <div id="wrapper" class="clearfix" > 
				    <div id="maincol">
				      <div class="outside">
                <div id="TopRightCorner"></div>		
          			<div id="TopLeftCorner"></div>
          			  <div class="inner">
            			  <div id="nav">
                      <span style="float: right">
                        <% if logged_in? -%>
                          <%= nav_link "Profile", "user", "index" %> |
                          <%= nav_link "Logout", "user", "logout" %> 
                        <% else -%>
                        <% end -%>
                      </span>
                      </div>
                    <div class="notice">
                      <%= render :partial => 'shared/notice' %>
                    </div>
      				      <%= yield %>
      				    </div>
    				  	<div id="BottomRightCorner"></div>		
          			<div id="BottomLeftCorner"></div>
  				    </div>
  			    </div>
  			  </div>
      <%= render :partial => 'shared/footer' %>
		</div>
		<%= render :partial => 'shared/debug' %>
	</body>
</html>