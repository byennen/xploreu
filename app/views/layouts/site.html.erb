<!DOCTYPE HTML PUBLIC "-//W3C//DTD XHTML 1.0 Strict//EN" 
  "http://www.w3.org/TR/xhtml1/DTD/xhtml1-strict.dtd"> 
<html> 
	<head> 
    <title><%= @title %>: XploreU The Student Travel-pedia</title>
		<%= stylesheet_link_tag 'frontend', 'profile', 'corners', 'stickies' %>
	  	<%= javascript_include_tag :defaults %>
	<script type="text/javascript">
		window.onload = addCodeToFunction(window.onload,function() {
			if($('stickie_notice')) {
				new Effect.Appear($('stickie_notice'),{queue:'end',duration:0.8,opacity:0.7});
				new PeriodicalExecuter(function() {
				new Effect.Fade($('stickie_notice'),{
									duration: 1.0,
									queue: 'end'
								});
								this.stop();
							},5);
						}
					});
	</script>
	</head>
	<body>
		<div id="pagewidth" >
      		<%= render :partial => 'shared/header' %>
        	<%= render :partial => 'shared/top_nav' %>
		<div id="wrapper" class="clearfix" >
	    <div class="outside_home">
      		<div id="TopRightCorner_home"></div>		
			<div id="TopLeftCorner_home"></div>
				<div id="top_bar">
					<div style="float:left;"><b><%= @title %></b></div>
					<div id="nav">
						<% if logged_in? -%>
						<%= nav_link "Profile", "user", "index" %> |
						<%= nav_link "Logout", "user", "logout" %> 
						<% else -%>
						<% end -%>
					</div>
				</div>
		    <div id="inner_home">
			<div class="notice"><%= render_stickies %></div>
		<!-- inner content here -->
				<div class="inside"><%= yield %></div>
		<!-- end of inner content -->
				<div id="BottomRightCorner"></div>		
				<div id="BottomLeftCorner"></div>
			</div>
		</div>
		</div>
      	<%= render :partial => 'shared/footer' %>
		</div>
		<%= render :partial => 'shared/debug' %>
		</div>
	</body>
</html>